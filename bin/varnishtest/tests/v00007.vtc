varnishtest "Test random director"

server s1 {
	rxreq
	txresp -body "foo1"
	rxreq
	txresp -body "bar1"
} -start

varnish v1 -vcl+backend {
	import directors from "${topbuild}/lib/libvmod_directors/.libs/libvmod_directors.so";

	sub vcl_init {
		new foo = directors.random();
		foo.add_backend(s1, 1);
		foo.add_backend(s1, 1);
	}

	sub vcl_recv {
		set req.backend = foo.backend();
	}
} -start

client c1 {
	timeout 10
	txreq -url "/foo"
	rxresp
	txreq -url "/bar"
	rxresp
} -run
